
<div class="header-container">

    <img src="./background.jpg" alt="" style="   position: absolute;
    width: 100%;
    height: 100%;z-index: 1; ">

    <div class="login-box" style=" z-index: 2;">
        <% if (isUser.isAuthenticated()) { %>
            <img src="<%= isUser.profilePhoto %>" alt="Profile Photo">
            <a href="/profile">View Profile</a>
        <% } else { %>
            <p>Discover & read more</p>
            <a href="/login" class="amazon-btn">Continue with Amazon</a>
            <a href="/login" class="apple-btn">Continue with Apple</a>
            <a href="/signup" class="email-btn">Sign up with email</a>
            <p>Already a member? <a href="/login">Sign In</a></p>
        <% } %>

        
    </div>
    
        <div class="logo" style="position: absolute; z-index: 2;">
            <img src="./logo.jpg" alt="logo">
        </div>

        <!-- Rant/Discuss Section -->
        <div class="rant-box" style="z-index: 2;">
            <img src="./moto.jpg" alt="">
            <% if (isUser.isAuthenticated) { %>
                <img src="<%= isUser.profilePhoto %>" alt="Profile Photo">
            <% } else { %>
                <a href="/login">Login/Register</a>
            <% } %>
        </div>


</div>







    

    <!-- Main Content Container -->
    <div class="container">








        <!-- Search Bar -->
        <div class="search-bar">
            <form action="/search" method="post">
                <input type="text" name="query" placeholder="Search for books or authors...">
                <button type="submit">Search</button>
            </form>
        </div>

        <!-- Main Content Area with Flexbox Layout -->
        <div class="main-content">
            <!-- Left Sidebar for Latest Discussions -->
            <div class="sidebar">
                <h3>Some Latest Discussion Topics</h3>
                <ul class="discussions">
                    <% for (let i = 0; i < discussions.length; i++) { %>
                        <li>
                            <form action="/search" method="POST" style="display:inline;">
                                <input type="hidden" name="book_id" value="<%= discussions[i].book_id %>">
                                <button type="submit" style="background:none; border:none; cursor:pointer;">
                                    <%= discussions[i].text %>
                                </button>
                            </form>
                        </li>
                    <% } %>
                </ul>
            </div>

            <!-- Books Section (on the right) -->
            <div class="book-results">
                <% for (let i = 0; i < books.length; i++) { %>
                    <h2><%= books[i].name %></h2>
                    <p><%= books[i].author %></p>
                <% } %>
            </div>
        </div>

    </div>
