<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
<link rel="stylesheet" href="/home.css">
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <% include('topBar.ejs') %>
    </div>

    <!-- Main Content -->
    <div class="container">
        <!-- Rant/Discuss Section -->
        <div class="rant-box">
            <h2>Rant/Discuss your heart out</h2>
            <% if (isUser.isAuthenticated) { %>
                <img src="<%= isUser.profilePhoto %>" alt="Profile Photo">
            <% } else { %>
                <a href="/login">Login/Register</a>
            <% } %>
        </div>

        <!-- Search Bar -->
        <div class="search-bar">
            <form action="/search" method="post">
                <input type="text" name="query" placeholder="Search for books or authors...">
                <button type="submit">Search</button>
            </form>
        </div>

        <!-- Main Content Area with Flexbox Layout -->
        <div class="main-content">
            <!-- Left Sidebar for Latest Discussions -->
            <div class="sidebar">
                <h3>Some Latest Discussion Topics</h3>
                <ul class="discussions">
                    <% for (let i = 0; i < discussions.length; i++) { %>
                        <li>
                            <form action="/search" method="POST" style="display:inline;">
                                <input type="hidden" name="book_id" value="<%= discussions[i].book_id %>">
                                <button type="submit" style="background:none; border:none; cursor:pointer;">
                                    <%= discussions[i].text %>
                                </button>
                            </form>
              
                        </li>
                        
                    <% } %>
                </ul>
            </div>

            <!-- Books Section (on the right) -->
            <div class="book-results">
                <% for (let i = 0; i < books.length; i++) { %>
                    <h2><%= books[i].name %></h2>
                    <p><%= books[i].author %></p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="bottom-bar">
        <% include('bottomBar.ejs') %>
    </div>
</body>
</html>



